.ripple
	overflow hidden
	position relative

	&::after
		background currentcolor
		content ''
		height 100%
		opacity 0
		position absolute
		right 0
		top 0
		transition opacity .3s
		width 100%

	&:hover::after
		opacity 0.04

	&:focus::after
		opacity 0.12

	&:active::after
		opacity 0.16

